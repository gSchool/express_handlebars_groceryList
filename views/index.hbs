<form action="/" method="post">
  <div class="form-group">
    <h3 class="text-center"><label for="item">Grocery Item</label></h3>
    <input id="item" type="text" name="item" class="form-control" placeholder="Type Item Here">
  </div>
  <div class="form-group">
    <button type="submit" class="form-control btn btn-info">Add Item</button>
  </div>
</form>

{{#groceryList}}
  <h3 class="text-center">{{this}}</h3>
  <form action="/delete/{{this}}" method="post">
    <div class="form-group">
      <button type="submit" class="form-control btn btn-danger">Delete {{this}}</button>
    </div>
  </form>
  <form action="/edit/{{this}}">
    <div class="form-group">
      <button type="submit" class="form-control btn btn-success">Edit {{this}}</button>
    </div>
  </form>
{{/groceryList}}

{{#if error}}
  {{error}}
{{/if}}
